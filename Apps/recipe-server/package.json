{
   "name": "recipe-server",
   "version": "0.0.0",
   "main": "lib/index.js",
   "scripts": {
      "build": "tsc",
      "watch": "tsc --watch",
      "start": "dotenv -- nodemon src/index.ts",
      "typeorm": "dotenv -- typeorm-ts-node-commonjs"
   },
   "dependencies": {
      "@apollo/server": "^4.9.3",
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.20.2",
      "connect-redis": "^7.1.0",
      "cookie-parser": "^1.4.6",
      "cors": "^2.8.5",
      "dayjs": "^1.11.10",
      "express": "^4.18.2",
      "express-session": "^1.17.3",
      "graphql": "^16.8.1",
      "graphql-scalars": "^1.22.2",
      "ioredis": "^5.3.2",
      "jsonwebtoken": "^9.0.2",
      "mysql2": "^3.6.1",
      "passport": "^0.6.0",
      "passport-http-bearer": "^1.0.1",
      "passport-local": "^1.0.0",
      "reflect-metadata": "^0.1.13",
      "type-graphql": "^2.0.0-beta.3",
      "typeorm": "0.3.17"
   },
   "devDependencies": {
      "@types/bcryptjs": "^2.4.4",
      "@types/body-parser": "^1.19.3",
      "@types/cookie-parser": "^1.4.4",
      "@types/cors": "^2.8.14",
      "@types/express": "^4.17.17",
      "@types/express-session": "^1.17.7",
      "@types/jsonwebtoken": "^9.0.3",
      "@types/node": "^18.17.18",
      "@types/passport": "^1.0.12",
      "@types/passport-http-bearer": "^1.0.37",
      "@types/passport-local": "^1.0.35",
      "dotenv-cli": "^7.3.0",
      "nodemon": "^3.0.1",
      "ts-node": "10.9.1",
      "typescript": "5.2.2"
   },
   "nodemonConfig": {
      "restartable": "rs",
      "ignore": [
         ".git",
         "node_modules/",
         "lib/"
      ],
      "watch": [
         "src/",
         "tsconfig.json",
         "package.json",
         "package-lock.json",
         ".env"
      ],
      "execMap": {
         "ts": "node --trace-warnings -r ts-node/register"
      },
      "env": {},
      "ext": "js,json,ts"
   }
}
